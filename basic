<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Throne of Glass – Interactive Map</title>
  <link
    rel="stylesheet"
    href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css"
    integrity="sha256-sA+e2ZlZ/sNw6xg4jD6D5wM76pWyUnLez3fF0A0j0YQ="
    crossorigin=""
  />
  <style>
    body {
      margin: 0;
      font-family: sans-serif;
      background-color: #0d0d0d;
      color: #fff;
    }
    header {
      background-color: #1a1a1a;
      padding: 1rem;
      text-align: center;
    }
    #map {
      height: 90vh;
      width: 100%;
    }
    .popup-content {
      color: #000;
    }
  </style>
</head>
<body>
  <header>
    <h1>The known World of Throne of Glass</h1>
    <p>Erilea - Southern Continent - Wendlyn</p>
  </header>
  <div id="map"></div>

  <script
    src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"
    integrity="sha256-o9N1j7kP1JbE8zT3sSkDRX0V5Q671VLPw5u1FQ1F0Ew="
    crossorigin=""
  ></script>
  <script>
    // Erstelle die Karte und setze die Startposition
    const map = L.map("map").setView([0, 0], 2);

    // Füge eine einfache Hintergrundkarte hinzu (OpenStreetMap als Platzhalter)
    L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
      attribution: "&copy; OpenStreetMap contributors"
    }).addTo(map);

    // Beispielorte mit Koordinaten (fiktiv, nicht kanonisch!)
    const orte = [
      {
        name: "Rifthold",
        coords: [20, 10],
        beschreibung:
          "Die Hauptstadt von Adarlan. Celaena beginnt hier einige ihrer Missionen.",
        zitat:
          "&ldquo;She was the best, the most skilled. And she knew it.&rdquo;",
        charaktere: ["Celaena Sardothien"]
      },
      {
        name: "Skull's Bay",
        coords: [10, 30],
        beschreibung:
          "Eine Piratenstadt, in der Celaena einen gefährlichen Auftrag ausführt.",
        zitat: "&ldquo;You’re more than this. You’re more than what they make you out to be.&rdquo;",
        charaktere: ["Celaena", "Captain Rolfe"]
      },
      {
        name: "The Red Desert",
        coords: [-10, 5],
        beschreibung:
          "Heimat der Silent Assassins – ein Ort der Prüfung und Erkenntnis.",
        zitat: "&ldquo;Silence is not weakness.&rdquo;",
        charaktere: ["Celaena", "Silent Master"]
      }
    ];

    // Marker hinzufügen
    orte.forEach((ort) => {
      const popupHtml = `
        <div class="popup-content">
          <h3>${ort.name}</h3>
          <p><strong>Beschreibung:</strong> ${ort.beschreibung}</p>
          <p><strong>Zitat:</strong> ${ort.zitat}</p>
          <p><strong>Charaktere:</strong> ${ort.charaktere.join(", ")}</p>
        </div>
      `;

      L.marker(ort.coords)
        .addTo(map)
        .bindPopup(popupHtml);
    });
  </script>
</body>
</html>
